<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <!-- This is the place where User POJO class and user table mapping -->
    <class name = "com.andersen.lesson9.Models.User" table = "public.user">
        <meta attribute = "class-description">
            This class contains the user detail. This is optional
        </meta>

        <id name = "id" type = "int" column = "id">
            <generator class="native"/>
        </id>

        <property name = "name" column = "name" type = "string"/>
        <property name = "creationDate" column = "creation_date" type = "timestamp"/>

    </class>
</hibernate-mapping>