<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name = "com.andersen.lesson9.Models.User" table = "public.user">
        <id name = "id" type = "int" column = "id">
            <generator class="increment">
                <param name="sequence">user_seq</param>
            </generator>
        </id>
        <property name = "name" column = "name" type = "string"/>
        <property name = "creationDate" column = "creation_date" type = "timestamp"/>
        <set name="ticketList" table="ticket" inverse="true" cascade="all" lazy="true" fetch="select">
            <key>
                <column name="user_id" not-null="true" />
            </key>
            <one-to-many class="com.andersen.lesson9.Models.Ticket" />
        </set>
    </class>
</hibernate-mapping>